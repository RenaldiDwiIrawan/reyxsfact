---
import Layout from "../layouts/Layout.astro";

import Card from "../components/Card.astro";
import Heading from "../components/Heading.astro";
// import CustomImageScroll from "../components/CustomImageScroll.astro";
import CTA from "../components/CTA.astro";
import Contact from "../components/Contact.astro";

//Tech Stack components
import Anaren from "../components/Anaren.astro";
import Java from "../components/tech-stack/java.astro";
import Springboot from "../components/tech-stack/springBootDetail.astro";
import PostgreSql from "../components/tech-stack/postgreDetail.astro";
//Project Components
import Python from "../components/Python.astro";
---

<Layout title="Java Developer Portfolio">
	<div id="contents">
		<main class="container">
			<div class="mb-16">
				<Heading />
				<p
					class="mt-4 text-lg text-zinc-500 dark:text-zinc-400 font-light lg:text-xl"
				>
					Software Developer with over 2 years of experience in developing and
					maintaining software systems. Expertise in backend development,
					microservices architecture, and front-end integration. Adept at
					problem-solving and delivering high-quality code. Proven ability to
					manage projects independently and collaborate effectively within team
					environments. Always eager to learn new technologies and enhance my
					skill set.
				</p>
			</div>

			<h2
				class="text-3xl mt-6 font-medium lg:text-4xl tracking-tight text-primary dark:text-white mb-2"
			>
				Tech Stack
			</h2>
			<div class="mx-auto grid grid-cols-1 md:grid-cols-3 gap-4">
				<div class="">
					<Card
						href="java"
						title="Java"
						body="Bahasa multi-platform, berorientasi objek, dan berpusat pada jaringan yang dapat digunakan sebagai platform tersendiri ."
						tags="java"
					>
						<div class="max-w-full">
							<Java />
						</div>
					</Card>
				</div>
				<div class="">
					<Card
						href="SpringBoot"
						title="SpringBoot"
						body="Java Spring Boot adalah alat sumber terbuka yang memudahkan penggunaan kerangka kerja berbasis Java untuk membuat layanan mikro dan aplikasi web"
						tags="Springboot"
					>
						<div class="max-w-full">
							<Springboot />
						</div>
					</Card>
				</div>
				<div class="">
					<Card
						href="PostgreSQL"
						title="PostgreSql"
						body="PostgreSQL adalah sistem manajemen basis data relasional (RDBMS) yang open-source dan sangat kuat. Dikembangkan oleh PostgreSQL Global Development Group, PostgreSQL menonjol karena keandalan, skalabilitas, dan kemampuan untuk menangani beban kerja yang kompleks."
						tags="PostgreSQL"
					>
						<div class="max-w-full">
							<PostgreSql />
						</div>
					</Card>
				</div>
			</div>
			<div class="my-8 bg-black">
				<CTA />
			</div>
			<h2
				class="text-3xl mt-6 font-medium lg:text-4xl tracking-tight text-primary dark:text-white mb-2"
			>
				Fun Projects
			</h2>
			<div class="mx-auto grid grid-cols-1 md:grid-cols-3 gap-4">
				<div class="">
					<Card
						title="Misc Python Apps"
						body="Miscellaneous Python applications and scripts I've made to help me learn Python and to use as productivity tools or save me time."
						tags="Python"
						github="https://github.com/leabs/misc-python-apps"
					>
						<Python />
					</Card>
				</div>
				<div class="">
					<Card
						title="Misc Python Apps"
						body="Miscellaneous Python applications and scripts I've made to help me learn Python and to use as productivity tools or save me time."
						tags="Python"
						github="https://github.com/leabs/misc-python-apps"
					>
						<Python />
					</Card>
				</div>
				<div class="">
					<Card
						title="Misc Python Apps"
						body="Miscellaneous Python applications and scripts I've made to help me learn Python and to use as productivity tools or save me time."
						tags="Python"
						github="https://github.com/leabs/misc-python-apps"
					>
						<Python />
					</Card>
				</div>
			</div>
			<div class="my-8">
				<Contact />
			</div>
		</main>
	</div>
</Layout>

<style is:global>
	main {
		margin: auto;
		padding: 0.75rem;
		width: 1100px;
		max-width: 100%;
		color: white;
		line-height: 1.6;
	}
	.project-image {
		max-width: 100% !important;
		overflow: hidden;
	}
	.project-cards {
	}
	.video-wrapper {
		background: #111111;
		padding: calc(1.5rem - 1px);
		line-height: 1.4;
		border-radius: 8px;
		margin-bottom: 2rem;
	}
	.project-column > div {
		max-width: 100%;
		overflow: hidden;
	}
	.projects-alt > li {
		gap: 1rem !important;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
		font-size: 2.75rem;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(
			rgba(var(--accent-dark), 66%),
			rgba(var(--accent-dark), 33%)
		);
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		gap: 0;
		padding: 0;
	}
	.read-more {
		color: #fff;
	}
	details {
		position: relative;
		top: -1px;
		margin-top: 0;
		margin-bottom: 1rem;
		padding: 1rem;
		border-radius: 0 0 8px 8px;
		max-width: 900px;
	}
	details > div {
		max-width: 830px;
	}

	summary:hover {
		cursor: pointer;
	}
</style>

<script></script>
