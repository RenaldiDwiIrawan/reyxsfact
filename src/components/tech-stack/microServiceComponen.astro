---
const items = ["./tech-stack/microservice.jpg"];
---

<div class="microserviceComponen">
	{
		items.map((item) => (
			<img
				loading="lazy"
				class="microserviceComponen"
				src={item}
				alt="logo microService "
			/>
		))
	}
</div>

<style>
	.microserviceComponen {
		display: flex;
		justify-content: center;
		gap: 12px;
		cursor: auto;
	}
	@media (max-width: 768px) {
		.microserviceComponen {
			display: flex;
			width: 55%;
			justify-content: left;
			flex-direction: row;
			gap: 12px;
		}
	}
	.microserviceComponen {
		height: 200px;
		width: auto;
	}
</style>
