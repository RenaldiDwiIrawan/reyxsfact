---
const items = ["./tech-stack/postgresql.jpg"];
---

<div class="postgreComponen">
	{
		items.map((item) => (
			<img
				loading="lazy"
				class="postgreComponen"
				src={item}
				alt="logo postgreSQL  "
			/>
		))
	}
</div>

<style>
	.postgreComponen {
		display: flex;
		justify-content: center;
		gap: 12px;
		cursor: auto;
	}
	@media (max-width: 768px) {
		.postgreComponen {
			display: flex;
			width: 55%;
			justify-content: left;
			flex-direction: row;
			gap: 12px;
		}
	}
	.postgreComponen {
		height: 50px;
		width: auto;
	}
</style>
